---
title: Blog
use:
  - posts
---

{% set activeYear = false %}

{% for post in data.posts %}
    {% set postYear = post.date|date('Y') %}

    {% if postYear != activeYear %}
        {% if activeYear != false %}
            </ul>
        {% endif %}

        {% set activeYear = postYear %}

        <h2>{{ postYear }}</h2>

        <ul>
    {% endif %}

    <li>
        <a href="{{ post.url }}">{{ post.title }}</a>
        - {{ post.date|date('jS F Y') }}
    </li>
{% endfor %}
