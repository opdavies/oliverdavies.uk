<div class="mt-6">
    <div class="space-y-6">
        {% for talk in data.posts|sort((a, b) => a.date < b.date) %}
            <article>
                <h2>
                    <a class="text-blue-700 dark:text-blue-400" href="{{ talk.url }}">
                        {{ talk.title }}
                    </a>
                </h2>

                <p class="mt-1 leading-6">{{ talk.excerpt }}</p>
            </article>
        {% endfor %}
    </div>
</div>
