{% if video.id %}
  <section>
    <h2>Video</h2>

    <div>
    {% if video.type == 'vimeo' %}
      <div>
        <iframe
          allowfullscreen
          class="w-full border border-gray-500 aspect-[16/9]"
          frameborder="0"
          src="https://player.vimeo.com/video/{{ video.id }}"
        ></iframe>
      </div>
    {% elseif video.type == 'youtube' %}
      {% include 'youtube-video.html.twig' with { id: video.id } %}
    {% endif %}
    </div>
  </section>
{% endif %}
